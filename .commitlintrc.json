{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "build",
                "chore",
                "ci",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "test",
                "BREAKING_CHANGE"
            ]
        ],
        "type-case": [2, "always", ["lower-case", "upper-case"]]
    }
}
